@{
    List<Object> menuItems = new List<Object>();

    menuItems.Add(new
    {
        text = "Загальне",
        separator = true,
    });
    menuItems.Add(new
    {
        text = "Головна сторінка",
        url = "/",
        iconCss = "fa-solid fa-box",
    });
    menuItems.Add(new
    {
        text = "Категорії",
        url = "/Category",
        iconCss = "fa-solid fa-folder-closed",
    });
    menuItems.Add(new
    {
        text = "Транзакції",
        iconCss = "fa-solid fa-arrow-right-arrow-left",
        url = "/Transaction"
    });
}


<ejs-sidebar id="sidebar" width="290px" enableDock dockSize="100px"
            target=".dock-target" enableGestures="false">
    <e-content-template>

        <div class="logo-wrapper">
            <a href="/" div class="app-logo">
                <img src="~/logo.png"/>
            </a>
            <div class="w-100"></div>
            <i id="sidebar-toggler" class="fa-solid"></i>
        </div>

        <div class="profile-wrapper" id="profileWrapper" style="cursor: pointer;">
            <img class="profile-pic" src="~/profile.jpg" alt="Profile Picture" />
            <div class="titles d-flex flex-column ps-3">
                <h6 class="mb-0" style="color: white;">Персональний Кабінет</h6>
                <span class="text-muted">
                    @(User.Identity.IsAuthenticated ? User.Identity.Name : "Ваше ім'я")
                </span>
            </div>
        </div>



        <ejs-menu id="menu"
                  items="menuItems"
                  orientation="Vertical"
                  hamburgerMode></ejs-menu>
    </e-content-template>
</ejs-sidebar>

<script>
    document.addEventListener('DOMContentLoaded',function (){
        dockBar = document.getElementById('sidebar').ej2_instances[0];
        document.getElementById('sidebar-toggler').onclick = function () {
            dockBar.toggle();
        };
    });

</script>

<script>
    document.getElementById("profileWrapper").addEventListener("click", function () {
        window.location.href = "/Account/Profile";
    });
</script>